<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 offset-sm-4">
      <div class="login-form">

        <h2>Log in</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
          data: {turbo: false}) do |f| %>
          <div class="form-group">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        placeholder: "example@gmail.com",
                        input_html: { autocomplete: "email", class: "form-control" } %>
          </div>
          <div class="form-group">
            <%= f.input :password,
                        required: false,
                        placeholder: "..........",
                        input_html: { autocomplete: "current-password", class: "form-control" } %>
          </div>
          <div class="form-group form-check">
            <%= f.input :remember_me, as: :boolean, label: "Remember me",
                        input_html: { class: "form-check-input" } if devise_mapping.rememberable? %>
          </div>

          <%= f.button :submit, "Log in", class: "btn btn-primary" %>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>
